<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!-- API 11 theme customizations can go here. -->
    </style>

    
    <!-- 自定义左侧操作栏风格 -->
    <style name="main_Left_tab_button">
        <item name="android:textSize">13.0sp</item>  
        <item name="android:textColor">#ffffff</item>  
        <item name="android:ellipsize">marquee</item>  
        <item name="android:gravity">center_horizontal</item>   
        <item name="android:paddingTop">140dip</item>  
        <item name="android:paddingBottom">0dip</item>  
        <item name="android:layout_width">fill_parent</item>  
        <item name="android:layout_height">wrap_content</item>  
        <item name="android:layout_marginBottom">0dip</item>  
        <item name="android:button">@null</item>  
        <item name="android:singleLine">true</item>  
        <item name="android:drawablePadding">10.0dip</item>  
        <item name="android:layout_weight">1.0</item> 
        <!-- 这里背景也可以设置为一个xml文件，会根据是否点击改变背景 -->
        <item name="android:background">#00000000</item>
    </style>
    
    <!-- 自定义上侧操作栏风格 -->
    <style name="main_top_tab_button">
        <item name="android:textSize">13.0sp</item>  
        <item name="android:textColor">#ffffff</item>  
        <item name="android:ellipsize">marquee</item>  
        <item name="android:gravity">center_horizontal</item>   
        <item name="android:paddingTop">5dip</item>  
        <item name="android:paddingBottom">5dip</item>  
        <item name="android:layout_width">0dp</item>  
        <item name="android:layout_height">fill_parent</item>  
        <item name="android:layout_marginBottom">0dip</item>  
        <item name="android:button">@null</item>  
        <item name="android:singleLine">true</item>  
        <item name="android:drawablePadding">10.0dip</item>  
        <item name="android:layout_weight">1.0</item> 
        <!-- 这里背景也可以设置为一个xml文件，会根据是否点击改变背景 -->
        <item name="android:background">#00000000</item>
    </style>
    
</resources>
