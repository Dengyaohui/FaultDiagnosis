<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    >
        <!-- 时间选择 -->
    	<LinearLayout 
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        >
        <LinearLayout 
       		android:layout_weight="1"
       		android:layout_width="0dp"
       		android:layout_height="wrap_content"
       		android:orientation="vertical" 
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始时间:"
            />
        <EditText 
            android:id="@+id/edit_start_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束时间:"
            />
        <EditText 
            android:id="@+id/edit_end_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />
    	</LinearLayout>
		<!-- 搜索按键 -->
    	<LinearLayout 
    	    android:layout_width="wrap_content"
    	    android:layout_height="fill_parent"
    	    android:paddingBottom="4dp"
    	    >
    	    <ImageButton
    	        android:id="@+id/search_Imagebutton"
	    	    android:layout_width="50dp"
	    	    android:layout_height="fill_parent"
	    	    android:background="#33A1C9"
	    	    android:src="@drawable/search"
    	     />
    	</LinearLayout>
   		</LinearLayout>
        <!-- 无量纲历史图表 -->
	   	<ScrollView 
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:fillViewport="true"
	        >
			<LinearLayout
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"  
			    >
	    	    <!-- 显示界面 -->
				<LinearLayout 
				    android:id="@+id/LinearLayoutView1"
				    android:layout_width="fill_parent"
				    android:layout_height="250dp"
				    android:layout_gravity="center_horizontal"
				    android:orientation="vertical"
				    android:background="#292421"
				   />  
				<LinearLayout 
				    android:id="@+id/LinearLayoutView2"
				    android:layout_width="fill_parent"
				    android:layout_height="250dp"
				    android:layout_gravity="center_horizontal"
				    android:orientation="vertical"
				    android:background="#292421"
				   />  
				<LinearLayout  
				    android:id="@+id/LinearLayoutView3"
				    android:layout_width="fill_parent"
				    android:layout_height="250dp"
				    android:layout_gravity="center_horizontal"
				    android:orientation="vertical"
				    android:background="#292421"
				   />  
				 <LinearLayout 
				    android:id="@+id/LinearLayoutView4"
				    android:layout_width="fill_parent"
				    android:layout_height="250dp"
				    android:layout_gravity="center_horizontal"
				    android:orientation="vertical"
				    android:background="#292421"
				   />  
				<LinearLayout 
				    android:id="@+id/LinearLayoutView5"
				    android:layout_width="fill_parent"
				    android:layout_height="250dp"
				    android:layout_gravity="center_horizontal"
				    android:orientation="vertical"
				    android:background="#292421"
				   />  

				<LinearLayout
				    android:id="@+id/LinearLayoutView6"
				    android:layout_width="fill_parent"
				    android:layout_height="250dp"
				    android:layout_gravity="center_horizontal"
				    android:background="#292421"
				    android:orientation="vertical" />
 
			</LinearLayout>
	   	</ScrollView>
</LinearLayout>